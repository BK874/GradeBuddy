<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs1635.gradebuddy.CalculateGpaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20sp">

        <TextView
            android:id="@+id/calculateGpaTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calculate_gpa_title"
            android:layout_marginBottom="10sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:gravity="center"/>

        <RelativeLayout
            android:id="@+id/expectedTermGpaLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/calculateGpaTitle">

            <TextView
                android:id="@+id/expectedTermGpaTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expected Term GPA:"
                android:textSize="20sp"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/expectedTermGpaNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.0"
                android:textSize="20sp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <ScrollView
            android:id="@+id/classesScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200sp"
            android:layout_marginTop="10sp"
            android:background="#ffffff"
            android:orientation="vertical"
            android:layout_below="@+id/expectedTermGpaLayout">

        </ScrollView>

        <RelativeLayout
            android:id="@+id/currentGpaLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:layout_below="@+id/classesScrollView">

            <TextView
                android:id="@+id/currentTermGpaTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Term GPA:"
                android:textSize="20sp"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/currentTermGpaNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.0"
                android:textSize="20sp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
